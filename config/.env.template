# ======================
# API CONFIGURATION
# ======================

# Alpaca Trading API (Paper Trading)
ALPACA_API_KEY=your_paper_api_key_here
ALPACA_SECRET_KEY=your_paper_secret_here
ALPACA_PAPER_URL=https://paper-api.alpaca.markets
ALPACA_LIVE_URL=https://api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets
ALPACA_API_VERSION=v2

# Binance API (Crypto Trading)
BINANCE_API_KEY=your_binance_key_here
BINANCE_SECRET_KEY=your_binance_secret_here
BINANCE_TESTNET=true
BINANCE_FUTURES=false

# Interactive Brokers TWS (Optional)
IB_GATEWAY_HOST=127.0.0.1
IB_GATEWAY_PORT=7497
IB_CLIENT_ID=1

# ======================
# RISK MANAGEMENT
# ======================

# Position Sizing
MAX_PORTFOLIO_RISK=0.05  # 5% of portfolio per trade
MAX_CONCURRENT_POSITIONS=5
MAX_POSITION_SIZE=0.15  # 15% of portfolio per symbol
MIN_POSITION_SIZE=0.01  # 1% of portfolio minimum

# Stop Loss Parameters
HARD_STOP_LOSS=0.08  # 8% max loss per trade
TRAILING_STOP_ACTIVATION=0.03  # 3% profit before trailing activates
TRAILING_STOP_DISTANCE=0.02  # 2% trailing distance

# Volatility Controls
MAX_VOLATILITY=0.30  # Reject trades if 30-day vol > 30%
MIN_LIQUIDITY=1000000  # $1M minimum daily volume

# ======================
# TRADING PARAMETERS
# ======================

# Order Execution
DEFAULT_ORDER_TYPE=LIMIT  # MARKET, LIMIT, STOP, etc.
DEFAULT_TIME_IN_FORCE=GTC  # GTC, IOC, FOK
SLIPPAGE_TOLERANCE=0.002  # 0.2% max acceptable slippage

# Strategy Controls
ENABLE_SHORTING=true
ENABLE_LEVERAGE=false
MAX_LEVERAGE=2.0  # If leverage enabled

# ======================
# PERFORMANCE MONITORING
# ======================

# Reporting
DAILY_LOSS_LIMIT=0.03  # 3% daily loss before shutdown
WEEKLY_LOSS_LIMIT=0.10  # 10% weekly loss before shutdown
PERFORMANCE_LOG_INTERVAL=3600  # Log stats hourly (seconds)

# ======================
# ENVIRONMENT SETTINGS
# ======================

# Execution Mode
TRADING_MODE=PAPER  # PAPER, LIVE, SIMULATION, BACKTEST
TIMEZONE=America/New_York

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_RETENTION_DAYS=7

# Data Settings
MAX_DATA_RETRY=3
DATA_CACHE_TTL=300  # 5 minutes cache (seconds)
